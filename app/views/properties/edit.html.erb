<div class= "new">
    <div class="col-md-6 col-md-offset-3">
        <h1 class="text-center">Property</h1>
        <p class="text-center"></p>
        <div class="well">
            <%= form_for @property, url: user_properties_path, html: { multipart: true } do |f| %>
                <div class="form-group">
                    <%= f.label :property_name %>
                    <%= f.text_field :property_name, class: 'form-control' %>
                </div>
                <div class="form-group">
                    <%= f.label :property_location %>
                    <%= f.text_field :property_location, class: 'form-control' %>
                </div>
                
                <div class="form-group">
                    <%= f.label :property_description %>
                    <%= f.text_area :description, class: 'form-control' %>
                </div>
                <div class="form-group">
                    <%= f.submit "Save", class: 'btn btn-primary' %>
                </div>
<% end %>
        </div>
    </div>
</div>