<div class= "new">
    <div class="col-md-6 col-md-offset-3">
        <h1 class="text-center">Your Properties</h1>
        <p class="text-center">Manage your properties.</p>
        <div class="well">
            <table class="table table-hover table-condensed">
                <% for item in @user.properties %>
                    <tr>
                        <td>
                            <%= link_to item.property_name, :controller => :properties, :action => :edit, :id=> item.id %>
                        </td>
                        <td>
                            <%= link_to "Design", new_property_compendium_path(item.id), class: 'btn btn-primary' %>
                        </td>
                        <td>
                            <%= button_to "Preview", "#", class: 'btn btn-warning' %>
                        </td>
                        <td>
                            <%= button_to "Send", "#", class: 'btn btn-success' %>
                        </td>
                    </tr>
                <% end %>
            </table>
        </div>
    </div>
</div>



